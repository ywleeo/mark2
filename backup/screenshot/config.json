{
  "name": "screenshot",
  "displayName": "截图插件",
  "version": "2.0.0",
  "description": "基于 html-to-image 的高质量截图插件",
  "author": "mark2-team",
  "enabled": false,
  "main": "index.js",
  "shortcuts": [
    {
      "accelerator": "CmdOrCtrl+Shift+C",
      "description": "截图",
      "action": "takeScreenshot"
    }
  ],
  "configuration": {
    "quality": 0.95,
    "pixelRatio": 2,
    "backgroundColor": "#ffffff"
  },
  "settings": [
    {
      "key": "quality",
      "type": "number",
      "label": "截图质量",
      "description": "截图质量 (0.1-1.0)",
      "default": 0.95,
      "min": 0.1,
      "max": 1.0,
      "step": 0.05
    },
    {
      "key": "pixelRatio",
      "type": "number",
      "label": "像素比率",
      "description": "截图像素比率 (1-3)",
      "default": 2,
      "min": 1,
      "max": 3,
      "step": 1
    },
    {
      "key": "backgroundColor",
      "type": "string",
      "label": "背景颜色",
      "description": "截图背景颜色",
      "default": "#ffffff"
    }
  ]
}