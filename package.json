{
  "name": "MARK2",
  "productName": "MARK2",
  "version": "1.1.9",
  "description": "一个基于 Electron 的 Markdown 阅读器",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "markdown",
    "reader"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.1",
    "codemirror": "^6.0.2",
    "highlight.js": "^11.11.1",
    "marked": "^5.0.0"
  },
  "build": {
    "appId": "com.mark2.app",
    "productName": "MARK2",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "src/**/*",
      "styles/**/*",
      "assets/icon.*",
      "node_modules/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.md",
      "!node_modules/**/README*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/.bin/**",
      "!**/*.map"
    ],
    "extraFiles": [],
    "asarUnpack": [],
    "compression": "maximum",
    "removePackageKeywords": true,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown Document",
        "description": "Markdown Document", 
        "role": "Editor"
      },
      {
        "ext": "markdown",
        "name": "Markdown Document",
        "description": "Markdown Document",
        "role": "Editor"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "assets/icon.icns",
      "minimumSystemVersion": "10.13.0",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage", 
      "category": "Utility"
    },
    "dmg": {
      "title": "MARK2",
      "icon": "assets/icon.icns"
    }
  }
}
